<form action="/posts/<%= @post.id %>" method="post">
  <label>Post name: <input type="text" name="name" value="<%= @post.name %>"></label>
  <label><textarea name="content" rows="8" cols="80"><%= @post.content %></textarea></label>
  <input id="hidden" type="hidden" name="_method" value="patch">
  <input type="submit" value="submit">
</form>
